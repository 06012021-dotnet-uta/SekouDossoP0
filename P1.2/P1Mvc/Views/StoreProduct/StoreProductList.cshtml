@model IEnumerable<ModelsLayer.StoreProduct>

@{
    ViewData["Title"] = "StoreProductList";
}

<h1>StoreProductList</h1>

<p>
    <a class="navbar-brand" asp-area="" asp-controller="Main" asp-action="Index">Home</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Product.ProductDescription)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.Location.LocationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            @* <th>
                @Html.DisplayNameFor(model => model.Product.ProductDescription)
            </th> *@
            <th>
                @Html.DisplayFor(modelItem => item.Product.ProductPrice)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Location.LocationName)
            </td>

        </tr>
}
    </tbody>
</table>
